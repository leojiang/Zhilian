<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/imageview"
        android:layout_marginTop="@dimen/padding_or_margin_size_3"
        android:layout_marginLeft="@dimen/padding_or_margin_size_3"
        android:layout_marginRight="@dimen/padding_or_margin_size_3"
        android:layout_marginBottom="@dimen/padding_or_margin_size_3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"/>

</LinearLayout>