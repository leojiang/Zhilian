<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/img_login_bg"
              android:orientation="vertical">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:paddingTop="20dp"
        android:text="@string/log_text"
        android:textColor="#FFFFFF"
        android:textSize="40dp"/>


    <EditText
        android:id="@+id/text_username"
        android:layout_width="210dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/edit_text_layout_bg"
        android:drawableLeft="@drawable/img_login_username"
        android:drawablePadding="5dp"
        android:hint="用户名/手机/邮箱"
        android:paddingLeft="5dp"/>

    <EditText
        android:id="@+id/img_login_password"
        android:layout_width="210dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:background="@drawable/edit_text_layout_bg"
        android:drawableLeft="@drawable/img_login_password"
        android:drawablePadding="5dp"
        android:hint="请输入密码"
        android:paddingLeft="5dp"/>


    <TextView
        android:id="@+id/button_login"
        android:layout_width="210dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:background="@drawable/long_button_bg"
        android:clickable="true"
        android:gravity="center"
        android:text="登       录"
        android:textColor="#00a6ff"
        android:textSize="18dp"/>

    <LinearLayout
        android:layout_width="210dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/btn_register"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="注册账号"
            android:textColor="#FFFFFF"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/forgot_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="忘记密码"
            android:textColor="#FFFFFF"
            android:textSize="16dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <TextView
            android:id="@+id/btn_share_weixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/img_share_weixin"/>

        <TextView
            android:id="@+id/btn_share_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:background="@drawable/img_share_qq"/>

        <TextView
            android:id="@+id/btn_share_weibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:background="@drawable/img_share_weibo"/>
    </LinearLayout>

    <TextView
        android:id="@+id/text_lookaround"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_gravity="right"
        android:layout_marginTop="60dp"
        android:background="#58bf5f"
        android:gravity="center"
        android:text="随便看看"
        android:textColor="#FFFFFF"
        android:textSize="18dp"/>

</LinearLayout>
