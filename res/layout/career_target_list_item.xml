<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="40dp"
              android:minHeight="40dp"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/index"
        android:layout_width="65dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/padding_or_margin_size_1"
        android:layout_weight="1"
        android:background="@color/tab_page_content_bg"
        android:gravity="center"
        android:textSize="@dimen/text_size_12"/>

    <TextView
        android:id="@+id/industry"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/padding_or_margin_size_1"
        android:layout_marginLeft="@dimen/padding_or_margin_size_1"
        android:layout_weight="1"
        android:background="@color/tab_page_content_bg"
        android:gravity="center"
        android:textSize="@dimen/text_size_12"/>

    <TextView
        android:id="@+id/percentage"
        android:layout_width="67dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/padding_or_margin_size_1"
        android:layout_marginLeft="@dimen/padding_or_margin_size_1"
        android:layout_weight="1"
        android:background="@color/tab_page_content_bg"
        android:gravity="center"
        android:textSize="@dimen/text_size_12"/>
    <TextView
        android:id="@+id/career_level"
        android:layout_width="77dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/padding_or_margin_size_1"
        android:layout_marginLeft="@dimen/padding_or_margin_size_1"
        android:layout_weight="1"
        android:textColor="@color/color_bg_white"
        android:background="@color/tab_page_content_bg"
        android:gravity="center"
        android:textSize="@dimen/text_size_12"/>

</LinearLayout>
