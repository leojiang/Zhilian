<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/index"
        android:layout_width="0dp"
        android:layout_height="@dimen/list_item_height_11"
        android:layout_marginBottom="@dimen/padding_or_margin_size_1"
        android:layout_weight="1"
        android:background="@color/tab_page_content_bg"
        android:gravity="center"
        android:textSize="@dimen/text_size_12"/>

    <TextView
        android:id="@+id/industry"
        android:layout_width="0dp"
        android:layout_height="@dimen/list_item_height_11"
        android:layout_marginBottom="@dimen/padding_or_margin_size_1"
        android:layout_marginLeft="@dimen/padding_or_margin_size_1"
        android:layout_weight="1"
        android:background="@color/tab_page_content_bg"
        android:gravity="center"
        android:textSize="@dimen/text_size_12"/>

    <TextView
        android:id="@+id/percentage"
        android:layout_width="0dp"
        android:layout_height="@dimen/list_item_height_11"
        android:layout_marginBottom="@dimen/padding_or_margin_size_1"
        android:layout_marginLeft="@dimen/padding_or_margin_size_1"
        android:layout_weight="1"
        android:background="@color/tab_page_content_bg"
        android:gravity="center"
        android:textSize="@dimen/text_size_12"/>

</LinearLayout>
