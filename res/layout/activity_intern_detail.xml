<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:scaleType="fitStart"
        android:src="@drawable/advertisement">
    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height_13"
        android:layout_marginBottom="@dimen/padding_or_margin_size_5"
        android:layout_marginLeft="@dimen/padding_or_margin_size_5"
        android:layout_marginRight="@dimen/padding_or_margin_size_5"
        android:layout_marginTop="@dimen/padding_or_margin_size_5">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_shllow_blue"
            android:gravity="center"
            android:text="职位名称"
            android:textColor="@color/color_bg_white"
            android:textSize="@dimen/text_size_14"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="求职分数"
            android:textSize="@dimen/text_size_14"/>
    </LinearLayout>

    <TextView
        android:id="@+id/job_description"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>

    <TextView
        android:paddingLeft="@dimen/padding_or_margin_size_10"
        android:gravity="center_vertical"
        android:text="XXX科技有限公司"
        android:textSize="@dimen/text_size_14"
        android:background="#55CCCCCC"
        android:id="@+id/company_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <TextView
        android:textColor="@color/color_bg_red"
        android:gravity="center"
        android:text="点我试试~~"
        android:id="@+id/company_description"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height_13"
        android:layout_marginBottom="@dimen/padding_or_margin_size_10"
        android:layout_marginTop="@dimen/padding_or_margin_size_10"
        android:paddingLeft="@dimen/padding_or_margin_size_10"
        android:paddingRight="@dimen/padding_or_margin_size_10">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_bg_green"
            android:gravity="center"
            android:text="投递简历"
            android:textColor="@color/color_bg_white"
            android:textSize="@dimen/text_size_14"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/padding_or_margin_size_5"
            android:layout_weight="1"
            android:background="@drawable/button_bg_orange"
            android:gravity="center"
            android:text="现在关注"
            android:textColor="@color/color_bg_white"
            android:textSize="@dimen/text_size_14"/>
    </LinearLayout>


</LinearLayout>