<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/companyName"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height_11"
        android:layout_marginBottom="@dimen/padding_or_margin_size_1"
        android:background="@color/tab_page_content_bg"
        android:gravity="center"
        android:textSize="@dimen/text_size_12" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp" >

        <TextView
            android:id="@+id/jobTitle"
            android:layout_width="0dp"
            android:layout_height="@dimen/list_item_height_11"
            android:layout_weight="1"
            android:background="@color/tab_page_content_bg"
            android:gravity="center"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/location"
            android:layout_width="0dp"
            android:layout_height="@dimen/list_item_height_11"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="@color/tab_page_content_bg"
            android:gravity="center"
            android:textSize="@dimen/text_size_12" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_or_margin_size_1" >

        <TextView
            android:id="@+id/baseCompetence"
            android:layout_width="0dp"
            android:layout_height="@dimen/list_item_height_11"
            android:layout_weight="1"
            android:background="@color/tab_page_content_bg"
            android:gravity="center"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/check_detail"
            android:layout_width="0dp"
            android:layout_height="@dimen/list_item_height_11"
            android:layout_marginLeft="@dimen/padding_or_margin_size_1"
            android:layout_weight="1"
            android:background="@color/tab_page_content_bg"
            android:gravity="center"
            android:text="查看详情"
            android:textColor="@color/color_bg_green"
            android:textSize="@dimen/text_size_12" />
    </LinearLayout>

</LinearLayout>