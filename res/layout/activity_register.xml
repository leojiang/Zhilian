<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_login_bg"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:paddingBottom="50dp"
        android:text="@string/log_text"
        android:textColor="@color/color_bg_white"
        android:textSize="@dimen/text_size_21" />

    <EditText
        android:id="@+id/text_username"
        android:layout_width="@dimen/list_item_width_14.5"
        android:layout_height="@dimen/list_item_height_14"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/edit_text_layout_bg"
        android:drawableLeft="@drawable/img_login_username"
        android:drawablePadding="@dimen/padding_or_margin_size_5"
        android:hint="用户名/手机/邮箱"
        android:paddingLeft="@dimen/padding_or_margin_size_5"
        android:textColorHint="@color/edit_text_hint_1"
        android:textSize="@dimen/text_size_13" />

    <TextView
        android:layout_width="@dimen/list_item_width_14.5"
        android:layout_height="@dimen/padding_or_margin_size_1"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/edit_text_bottom_line" />

    <EditText
        android:id="@+id/text_password"
        android:layout_width="@dimen/list_item_width_14.5"
        android:layout_height="@dimen/list_item_height_14"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/padding_or_margin_size_10"
        android:background="@drawable/edit_text_layout_bg"
        android:drawableLeft="@drawable/img_login_password"
        android:drawablePadding="@dimen/padding_or_margin_size_5"
        android:hint="请输入密码"
        android:paddingLeft="@dimen/padding_or_margin_size_5"
        android:textColorHint="@color/edit_text_hint_1"
        android:textSize="@dimen/text_size_13" />

    <TextView
        android:layout_width="@dimen/list_item_width_14.5"
        android:layout_height="@dimen/padding_or_margin_size_1"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/edit_text_bottom_line" />

    <EditText
        android:id="@+id/text_confirm_password"
        android:layout_width="@dimen/list_item_width_14.5"
        android:layout_height="@dimen/list_item_height_14"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/padding_or_margin_size_10"
        android:background="@drawable/edit_text_layout_bg"
        android:drawableLeft="@drawable/img_login_password"
        android:drawablePadding="@dimen/padding_or_margin_size_5"
        android:hint="确认密码"
        android:paddingLeft="@dimen/padding_or_margin_size_5"
        android:textColorHint="@color/edit_text_hint_1"
        android:textSize="@dimen/text_size_13" />

    <TextView
        android:layout_width="@dimen/list_item_width_14.5"
        android:layout_height="@dimen/padding_or_margin_size_1"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/edit_text_bottom_line" />

    <TextView
        android:id="@+id/btn_register"
        android:layout_width="@dimen/list_item_width_14.5"
        android:layout_height="@dimen/list_item_height_15"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:background="@drawable/long_button_bg_white"
        android:clickable="true"
        android:gravity="center"
        android:text="注       册"
        android:textColor="#00a6ff"
        android:textSize="@dimen/text_size_15" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>