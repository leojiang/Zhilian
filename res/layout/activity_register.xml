<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/img_login_bg"
              android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:paddingBottom="50dp"
        android:paddingTop="100dp"
        android:text="@string/log_text"
        android:textColor="#FFFFFF"
        android:textSize="40dp"/>

    <EditText
        android:id="@+id/text_username"
        android:layout_width="@dimen/edit_text_width"
        android:layout_height="@dimen/edit_text_height"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/edit_text_layout_bg"
        android:drawableLeft="@drawable/img_login_username"
        android:drawablePadding="5dp"
        android:hint="用户名/手机/邮箱"
        android:paddingLeft="5dp"
        android:textColorHint="@color/edit_text_hint"
        android:textSize="@dimen/edit_text_size"/>
    <TextView
        android:layout_width="@dimen/edit_text_width"
        android:layout_height="1px"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/edit_text_bottom_line"/>

    <EditText
        android:id="@+id/text_password"
        android:layout_width="@dimen/edit_text_width"
        android:layout_height="@dimen/edit_text_height"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/edit_text_layout_bg"
        android:drawableLeft="@drawable/img_login_password"
        android:drawablePadding="5dp"
        android:hint="请输入密码"
        android:paddingLeft="5dp"
        android:layout_marginTop="10dp"
        android:textColorHint="@color/edit_text_hint"
        android:textSize="@dimen/edit_text_size"/>
    <TextView
        android:layout_width="@dimen/edit_text_width"
        android:layout_height="1px"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/edit_text_bottom_line"/>


    <EditText
        android:id="@+id/text_confirm_password"
        android:layout_width="@dimen/edit_text_width"
        android:layout_height="@dimen/edit_text_height"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/edit_text_layout_bg"
        android:drawableLeft="@drawable/img_login_password"
        android:drawablePadding="5dp"
        android:layout_marginTop="10dp"
        android:hint="确认密码"
        android:paddingLeft="5dp"
        android:textColorHint="@color/edit_text_hint"
        android:textSize="@dimen/edit_text_size"/>
    <TextView
        android:layout_width="@dimen/edit_text_width"
        android:layout_height="1px"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/edit_text_bottom_line"/>

    <TextView
        android:id="@+id/btn_register"
        android:layout_width="@dimen/edit_text_width"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:background="@drawable/long_button_bg"
        android:clickable="true"
        android:gravity="center"
        android:text="注       册"
        android:textColor="#00a6ff"
        android:textSize="20dp"/>

</LinearLayout>
