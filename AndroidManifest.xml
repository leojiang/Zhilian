<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.zhi.gui.guide"
          xmlns:android="http://schemas.android.com/apk/res/android"
          android:versionCode="1"
          android:versionName="1.0">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="15"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:theme="@android:style/Theme.Light.NoTitleBar">
        <activity
            android:launchMode="singleTask"
            android:name="com.zhi.gui.guide.activity.ActivityMainTab">
        </activity>
        <activity
            android:name="com.zhi.gui.guide.activity.ActivitySplash"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.zhi.gui.guide.activity.ActivityLogin">
        </activity>
        <activity
            android:name="com.zhi.gui.guide.activity.ActivityRegister">
        </activity>
        <activity
            android:name="com.zhi.gui.guide.activity.ActivityAddBasicInfo">
        </activity>
        <activity
            android:name="com.zhi.gui.guide.activity.ActivityChooseIndustry">
        </activity>
        <activity
            android:name=".activity.ActivityInternshipDetail">
        </activity>
        <activity
            android:name="com.zhi.gui.guide.activity.CompanyActivity">
        </activity>
        <activity
            android:name="com.zhi.gui.guide.activity.ActivitySettings">
        </activity>
    </application>

</manifest>